{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard - Homelab Infrastructure",
  "automerge": true,
  "automergeType": "branch",
  "platformAutomerge": false,
  "ignoreTests": true,
  "prCreation": "immediate",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/.+\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Auto-merge patch and minor updates after stability period",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Major updates get individual PRs (not grouped, not auto-merged)",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "groupName": null,
      "labels": [
        "major-update"
      ]
    },
    {
      "description": "Group non-major Kubernetes platform updates",
      "matchManagers": [
        "kubernetes"
      ],
      "matchFileNames": [
        "kubernetes/platform/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "kubernetes-platform"
    },
    {
      "description": "Group non-major application container images",
      "matchManagers": [
        "kubernetes"
      ],
      "matchFileNames": [
        "kubernetes/applications/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "kubernetes-apps"
    },
    {
      "description": "Exclude renovate self-image from app grouping (releases too frequently)",
      "matchPackageNames": [
        "renovate/renovate"
      ],
      "groupName": "renovate-self",
      "schedule": [
        "every weekend"
      ]
    },
    {
      "description": "Group non-major Terraform updates",
      "matchManagers": [
        "terraform"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "terraform"
    },
    {
      "description": "Group non-major Docker image updates",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "docker-images"
    },
    {
      "description": "Group linuxserver.io images",
      "matchPackageNames": [
        "/^lscr\\.io/linuxserver//",
        "/^linuxserver//",
        "/^ghcr\\.io/linuxserver//"
      ],
      "groupName": "linuxserver-images"
    }
  ],
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 0,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "rebaseWhen": "behind-base-branch",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "assignees": [
    "@charlieshreck"
  ]
}
