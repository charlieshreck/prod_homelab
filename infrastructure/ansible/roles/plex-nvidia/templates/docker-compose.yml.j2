services:
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    runtime: nvidia
    environment:
      - PUID={{ plex_uid }}
      - PGID={{ plex_gid }}
      - TZ={{ plex_timezone }}
      - VERSION=docker
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=compute,video,utility
      - LD_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/nvidia/current
{% if plex_claim_token | default('') | length > 0 %}
      - PLEX_CLAIM={{ plex_claim_token }}
{% endif %}
    volumes:
      - {{ plex_config_dir }}:/config
      - type: tmpfs
        target: /transcode
        tmpfs:
          size: 8589934592
      - {{ plex_mount_point }}:/media:ro
    network_mode: host
    restart: unless-stopped
